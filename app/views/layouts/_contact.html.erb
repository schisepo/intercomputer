<section id="contact" class ="section-margins">

          <div class="row">
                <div class ="col-lg-4 text-right section-heading"> <h4 class ="text-uppercase"><strong>Contact Us...</strong></h4></div>
            </div>                    
            <div class="row teamprofile">
                 <%= form_tag({controller: "pages", action: "sendcontact"}, method: "post", id: "contactForm") do %>
                     <div class="row project">
                            <div class="col-md-6">
                                <div class="form-group">
                                <%= text_field_tag(:name,nil,:class=>"form-control",:placeholder=>"Your Name *",:required=> true) %>
                                <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                        <%= text_field_tag(:email,nil,:type=>"Email",:class=>"form-control",:placeholder=>"Your Email *",:required=> true) %>
                                     <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                <%= text_field_tag(:phone,nil,:type=>"text",:class=>"form-control",:placeholder=>"Your Phone *",:required=> true) %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                <%= text_area_tag(:message,nil,:type=>"Email",:class=>"form-control",:placeholder=>"Your Message *",:required=> true) %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                
                                <button  class="btn btn-primary btn-xl">Send Message</button></div>
                                <p>
                                <p class ="text-muted text-center">We'd <i class="fa fa-heart-o"></i> to hear from you!</p>
                            </div>
                        </div>
                    <% end %>
                </div>
</section>     